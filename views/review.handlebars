
 {{#if logged_in}}
<div class="row mt-4">
  <h3>Create Your Review</h3>
    <form class="form new-review-form" id="submit-review-btn">
      <div class="form-group">
        <label for="review-title">Give your review a brief title</label>
        <input class="form-input" type="text" id="review-title" name="review-title" />
      </div>
      <div class="form-group">
        <label for="review-content">Type your full review here:</label>
        <textarea class="form-input" id="review-content" name="review-content"></textarea>
      </div>
      <div class="form-group">
        <input type="hidden" id="trailId" value="{{trailId}}"/>
        <button type="submit" class="btn btn-primary">Post Review</button>
      </div>
    </form>
</div>

<script src='/js/review.js'></script>
{{else}}
<div class="row mt-4" id="login-row">
  <h1>Please <a href='/login'>login</a> or signup to leave a review</h1>
</div>
{{/if}}
